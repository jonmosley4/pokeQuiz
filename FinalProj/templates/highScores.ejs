<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>High Scores</title>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f0f4ff;
            color: #333;
            max-width: 800px;
            margin: 0 auto;
            padding: 20px;
            text-align: center;
            background-image: linear-gradient(to bottom right, #e6f2ff, #b3d9ff);
            min-height: 100vh;
        }

        h1 {
            color: #FF4500;
            font-size: 2.5em;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
            margin-bottom: 20px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            background-color: white;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
            border-radius: 10px;
            overflow: hidden;
        }

        th, td {
            border: 1px solid #1E90FF;
            padding: 12px;
            text-align: center;
        }

        th {
            background-color: #FF4500;
            color: white;
            font-weight: bold;
        }

        tr:nth-child(even) {
            background-color: #f0f0f0;
        }

        tr:hover {
            background-color: #e6f2ff;
        }

        button, a {
            display: inline-block;
            background-color: #FF4500;
            color: white;
            text-decoration: none;
            border: none;
            padding: 10px 20px;
            border-radius: 25px;
            cursor: pointer;
            transition: background-color 0.3s ease;
            margin: 10px;
            font-weight: bold;
        }

        button:hover, a:hover {
            background-color: #FF6347;
        }

        .no-scores {
            color: #1E90FF;
            font-weight: bold;
            margin: 20px 0;
        }
    </style>
</head>
<body>
    <h1>High Scores</h1>
    <table>
        <tr>
            <th>Name</th>
            <th>Starter</th>
            <th>Score Out of 10</th>
        </tr>
        <% if (highScores && highScores.length > 0) { %>
            <% highScores.forEach(function(score) { %>
                <tr>
                    <td><%= score.name %></td>
                    <td><%= score.starter %></td>
                    <td><%= score.score %></td>
                </tr>
            <% }); %>
        <% } else { %>
            <tr>
                <td colspan="3" class="no-scores">No scores yet</td>
            </tr>
        <% } %>
    </table><br><br>

    <form action="/resetHighScores" method="POST">
        <button type="submit">Reset High Scores</button>
    </form><br><br>
    
    <a href="/">Home</a>
</body>
</html>